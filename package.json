{
  "name": "express-typescript-template",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@ef-carbon/tspm": "^2.2.5",
    "@graphql-codegen/cli": "2.3.1",
    "@graphql-codegen/introspection": "2.1.1",
    "@graphql-codegen/typescript": "2.4.2",
    "@graphql-codegen/typescript-document-nodes": "2.2.2",
    "@graphql-codegen/typescript-mongodb": "2.3.0",
    "@graphql-codegen/typescript-resolvers": "2.4.3",
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.128",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.6.0",
    "husky": "^7.0.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  },
  "scripts": {
    "lint": "eslint --ext .ts --ignore-path .gitignore . --max-warnings=0",
    "lint:fix": "eslint --ext .ts --ignore-path .gitignore .  --fix",
    "transpile": "tsc -p tsconfig.json ",
    "dev": "run-s start",
    "start": "ts-node-dev ./src/index.ts",
    "clean": "rimraf dist",
    "transpile:swc": "swc src  -d dist  --source-maps --copy-files",
    "build": "NODE_ENV=production run-s clean transpile:swc",
    "copy-gql": "copyfiles -u 1 ./src/**/*.gql ./dist/src",
    "build:tsc": "NODE_ENV=production run-s clean transpile copy-gql",
    "serve": "node dist/index.js",
    "serve:tsc": "node dist/src/index.js",
    "prepare": "husky install",
    "generate": "graphql-codegen --config gql-codegen.yml"
  },
  "dependencies": {
    "apollo-server-express": "^3.6.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "express-jsdoc-swagger": "^1.6.7",
    "graphql": "^16.2.0",
    "graphql-import-node": "^0.0.4",
    "graphql-playground-middleware-express": "^1.7.23",
    "helmet": "^5.0.1",
    "mongoose": "^6.1.5",
    "morgan": "^1.10.0"
  }
}
